{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es6",
        "module": "CommonJS",
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/**/*"
    ]
}